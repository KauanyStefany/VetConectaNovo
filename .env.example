# Configurações do Ambiente VetConecta
# Copie este arquivo para .env e configure os valores

# Ambiente: development ou production
ENVIRONMENT=development

# Chave secreta para sessões (GERE UMA NOVA CHAVE SEGURA!)
# Para gerar: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=sua_chave_secreta_aqui_MUDE_ISSO

# Chave secreta para CSRF (GERE UMA NOVA CHAVE SEGURA!)
CSRF_SECRET_KEY=sua_chave_csrf_aqui_MUDE_ISSO

# Configurações de Banco de Dados
DATABASE_URL=sqlite:///storage/database/dados.db
TEST_DATABASE_PATH=storage/database/test_dados.db

# Configurações de Email (para redefinição de senha)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=seu_email@gmail.com
# SMTP_PASSWORD=sua_senha_app
# EMAIL_FROM=noreply@vetconecta.com

# Rate Limiting (requisições por minuto)
# RATE_LIMIT_LOGIN=5
# RATE_LIMIT_CADASTRO=3

# Configurações de Sessão
SESSION_MAX_AGE=3600
SESSION_HTTPS_ONLY=False

# Configurações de Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif
UPLOAD_PATH=static/uploads/usuarios

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=storage/logs/app.log

# Outras configurações
APP_NAME=VetConecta
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,seu-dominio.com
